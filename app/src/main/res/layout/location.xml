<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.oddeven.solution.newweddingapp.com.mobileDev.weddingApp.newweddingapp.home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ee234e"
        android:layout_height="wrap_content">
        <TextView
            android:text="Location tracker"
            android:textColor="#fff"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        >

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:textColor="@color/White"
                android:background="#ff7a7a"
                android:padding="5dp"
                android:gravity="center"
                android:drawableLeft="@mipmap/location_address_icon"
                android:text="Mr. Rajkumar Chauhan. Vlg- Jujhela (Bijnor) UP   "
                android:layout_centerInParent="true"
                android:textSize="17sp"/>


    </LinearLayout>


</LinearLayout>
